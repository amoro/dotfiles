# Create OSX icons: https://iconverticons.com/online/
MY_APPS_DIR="~/myapps"
mkdir $MY_APPS_DIR
nativefier --name Gmail --show-menu-bar --icon ~/.dotfiles/resources/gmail.icns https://www.gmail.com "$MY_APPS_DIR"
nativefier --name JIRA --show-menu-bar --icon ~/.dotfiles/resources/jira.icns https://powtoon.atlassian.net "$MY_APPS_DIR"
nativefier --name Excel office.live.com/start/Excel.aspx "$MY_APPS_DIR"
nativefier --name Word office.live.com/start/Word.aspx "$MY_APPS_DIR"
