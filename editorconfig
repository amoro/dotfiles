# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.html]
max_char = 78
brace_style = expand

[Makefile]
indent_style = tab
